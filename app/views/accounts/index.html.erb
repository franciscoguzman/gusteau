<%- model_class = Account -%>
<div class="brand">
  <h4><%='Cuentas' %></h4>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th># Cuenta</th>
      <th>Mesa</th>
      <th>Fecha de Apertura de Cuenta</th>
      <th>Total</th>
      <th>Detalle</th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= link_to account.id, account_path(account) %></td>
        <td><%= account.table_id %></td>
        <td><%= account.created_at %></td>
        <td><%= number_to_currency(account.total) %></td>
        <td>
          <%= link_to 'Ver Cuenta',
                      account_path(account), :class => 'btn btn-mini btn-success' %>
          <% if account.account_items.present? %>
              <%= link_to 'Cerrar Cuenta',
                          checkout_account_path(account.id),
                          :data => { :confirm => 'Seguro que quiere cerrar la cuenta?' },
                          :class => 'btn btn-mini btn-info'%>
          <% else %>
              <%= link_to 'Cancelar',
                          cancel_account_path(account.id),
                          :data => { :confirm => 'Seguro que quiere cancelar la cuenta?' },
                          :class => 'btn btn-mini btn-warning'%>
          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
