<div class="page-header">
  <h1><%= "Checkout de la mesa #{ @account.table_id }" %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= 'Folio' %>:</strong></dt>
  <dd><%= @account.id %></dd>
  <dt><strong><%= 'Fecha/Hora Apertura' %>:</strong></dt>
  <dd><%= @account.created_at %></dd>
</dl>

<table class="table table-striped account-items">
  <col class="qty-column">
  <col class="name-column">
  <col class="price-column">

  <thead>
  <tr>
    <th><%= 'Cant.' %></th>
    <th><%= 'Producto' %></th>
    <th><%= 'Precio' %></th>
    <th><%=	'Subtotal' %></th>
  </tr>
  </thead>
  <tbody>
  <% @account_items.each do |account_item| %>
      <tr>
        <td class="td-numeric"><%= account_item.quantity %></td>
        <td><%= account_item.product.name %></td>
        <td class="td-numeric"><%= account_item.price %></td>
        <td class="td-numeric"><%= account_item.price * account_item.quantity %></td>
      </tr>
  <% end %>

  <tr>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>Total</td>
    <td class="td-numeric"><%= @account.total %></td>
  </tr>
  </tbody>
</table>




