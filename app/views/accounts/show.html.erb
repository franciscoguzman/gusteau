<div class="page-header">
  <h1><%= "Cuenta de la mesa #{ @account.table_id }" %>
    <% unless @account.closed_at.present? %>
        <span>(Activa)</span>
    <% end %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= 'Folio' %>:</strong></dt>
  <dd><%= @account.id %></dd>
  <dt><strong><%= 'Fecha/Hora Apertura' %>:</strong></dt>
  <dd><%= @account.created_at %></dd>
  <dt><strong><%= 'Fecha/Hora Cierre' %>:</strong></dt>
  <dd><%= @account.closed_at %></dd>
</dl>

<%= render :partial => '/shared/account_info' %>



<div class="form-actions">
  <%= link_to 'Cerrar Cuenta',
              '#',
              :data => {:confirm => 'Quiere cerrar la cuenta?'},
              :class => 'btn-large btn-success' %>
</div>
