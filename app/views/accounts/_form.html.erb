<%= form_for @account, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :table_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :table_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :closed_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :closed_at, :class => 'datetime_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                accounts_path, :class => 'btn' %>
  </div>
<% end %>
