<%- model_class = Order -%>
<div class="brand">
  <h4><%='Cuentas' %></h4>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th># Cuenta</th>
      <th>Mesa</th>
      <th>Fecha de Apertura de Cuenta</th>
      <th>Total</th>
      <th>Detalle</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.id, order_path(order) %></td>
        <td><%= order.table_id %></td>
        <td><%= order.created_at %></td>
        <td><%= number_to_currency(order.total) %></td>
        <td>
          <%= link_to 'Ver Cuenta',
                      order_path(order), :class => 'btn btn-mini btn-success' %>
          <% if order.order_items.present? %>
              <%= link_to 'Cerrar Cuenta',
                          checkout_order_path(order.id),
                          :data => { :confirm => 'Seguro que quiere cerrar la cuenta?' },
                          :class => 'btn btn-mini btn-info'%>
          <% else %>
              <%= link_to 'Cancelar',
                          cancel_order_path(order.id),
                          :data => { :confirm => 'Seguro que quiere cancelar la cuenta?' },
                          :class => 'btn btn-mini btn-warning'%>
          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
