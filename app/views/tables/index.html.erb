<div class="page-header">
  <h1><%= 'Estado de las Mesas' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= '# Mesa' %></th>
      <th><%= 'Sillas' %></th>
      <th><%= 'Estado' %></th>
      <th><%= 'Hora de apertura' %></th>
    </tr>
  </thead>
  <tbody>
    <% @tables.each do |table| %>
      <tr>
        <td><%= link_to table.id, table_path(table) %></td>
        <td><%= table.seats %></td>
        <% if table.status.present? %>
            <td><span class="label label-success"><%= table.status %></span></td>
        <% else %>
            <td><span class="label label-warning"><%= 'Available' %></span></td>
        <% end %>
        <td><%= table.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

